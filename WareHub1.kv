			font_size: 16
			height: 32 		
	        multiline: False
	        hint_text: 'phone'

	    TextInput:
			id: points_text
			size_hint: 1, None
			font_size: 16
			height: 32 		
	        multiline: False
	        hint_text: 'points'

	    BoxLayout:
	    	CheckBox:
	    		id: manager_radiobutton
	    		group: True
	    	Label:
	    		text: 'Manager'
	    	CheckBox:
	    		id: student_radiobutton
