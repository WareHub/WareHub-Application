<LoginScreen>:
	BoxLayout:

		orientation: 'vertical'
		padding: 50, 50, 50, 50
		spacing: 20
		size: self.size


		Widget:
			size_hint:1, None
			height: 100
			
			
		TextInput:
			id: username_text
			size_hint: 1, None
			font_size: 16
			height: 32
			color: 0, 0, 1, 1
			valign: 'middle'
			halign: 'middle'
			background_color:[ 1, 1, 1, 1]
			multiline: False
			hint_text: 'username'
			
			
			
		TextInput:
			id: password_text
			size_hint: 1, None
			font_size: 16
			height: 32 		
	        multiline: False
	        password: True
	        hint_text: 'password'


	    Widget:

			
			
	    Button:
	    	size_hint: 1, None
	    	height: 40
	    	font_size: 16
			text: 'Login'
			background_color: .88, .88, .88, 1
			on_release: root.login()




<AddUserScreen>:
