	    	width: 100
	    	font_size: 16
			text: 'Back'
			on_release: root.manager.current = 'manager_screen'

	    Widget:





<ManagerScreen>:
	my_list: students_list_view
	BoxLayout:
		orientation: 'horizontal'
		BoxLayout:
		
			orientation: 'vertical'
			padding: 30, 70, 30, 70
			spacing: 30

			Button:
		    	text: 'Add User'
		    	on_release: root.manager.current = 'adduser_screen'


		    Button:
		    	text: 'Get Students'
		    	on_release: root.getStudents()

		    Button:
		    	text: 'Get Technicians'
		    	on_release: root.getTechs()

		    Button:
		    	text: 'Get Devices'
		    	on_release: root.getDevices()

		    Button:
		    	text: 'Update Information'
		    	on_release: root.manager.current = 'updateinfo_screen'

		    Button:
		    	text: 'Sign out'
		    	on_release: root.manager.current = 'login_screen'; root.my_list.adapter.data = []

		ListView:
	        id: students_list_view
	        adapter:
	            ListAdapter(data=[],args_converter=lambda row_index, an_obj: {'text': an_obj,'size_hint_y': None,'height': 40}, cls=main.Student)

